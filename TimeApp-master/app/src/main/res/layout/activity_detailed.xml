<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@color/black"
    >

    <TextView
        android:id="@+id/tvDetailCountry"
        android:layout_width="236dp"
        android:layout_height="159dp"
        android:layout_marginTop="152dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDetailTime"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="USA"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/tvDetailCity"
        app:layout_constraintStart_toStartOf="@+id/tvDetailCity"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailCity" />

    <TextView
        android:id="@+id/tvDetailCity"
        android:layout_width="236dp"
        android:layout_height="99dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="New York"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvDetailCountry"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvDetailCountry"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailCountry" />


</androidx.constraintlayout.widget.ConstraintLayout>